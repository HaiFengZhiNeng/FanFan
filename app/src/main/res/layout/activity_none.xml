    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fanfan.novel.activity.DanceActivity">


    <ImageView
        android:id="@+id/iv_splash_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
